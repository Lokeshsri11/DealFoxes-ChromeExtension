{
    "manifest_version": 3,
    "name": "Dealfoxes Coupon Finder",
    "version": "1.0",
    "description": "Get the latest coupons and offers from DealFoxes directly in your browser!",
    "permissions": ["activeTab"],
    "icons": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    },
    "action": {
      "default_popup": "popup.html",
      "default_icon": {
        "16": "icons/icon16.png",
        "48": "icons/icon48.png",
        "128": "icons/icon128.png"
      }
    }
  }
  